{
  "manifest_version": 3,
  "name": "Discord Customizer",
  "version": "1.0.0",
  "description": "Discord customizer for profile picture, banner, and popout theme",
  "permissions": [
    "activeTab",
    "https://discord.com/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://discord.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html", 
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
